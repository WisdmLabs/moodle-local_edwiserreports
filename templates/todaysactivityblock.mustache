<div class="card bg-primary">
    <div class="card-block text-white">
        <div class="row mx-0">
            <div class="col-5">
                <div class="bold mb-1">
                    {{#str}} todayslogin, local_sitereport {{/str}}
                </div>
                <div class="row mx-0 text-center">
                    <div class="col-12 todays-block bg-primary">
                        <div id="todays-onlinelearners" class=" font-size-30 font-weight-600 w-full">
                            <div class="data">0</div>
                        </div>
                        <small>
                            {{#str}} learners, local_sitereport {{/str}}
                        </small>
                    </div>
                    <div class="col-12 todays-block bg-primary">
                        <div id="todays-onlineteachers" class=" font-size-30 font-weight-600 w-full">
                            <div class="data">0</div>
                        </div>
                        <small>
                            {{#str}} teachers, local_sitereport {{/str}}
                        </small>
                    </div>
                </div>
            </div>
            <div class="col-7">
                <table class="summary ml-auto">
                    <thead class="border-bottom">
                        <tr>
                            <th class="text-left">
                                {{#str}} eventtoday, local_sitereport {{/str}}
                            </th>
                            <th class="text-right ">
                                {{#str}} value, local_sitereport {{/str}}
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td align="left">
                                {{#str}} enrollment, local_sitereport {{/str}}
                            </td>
                            <td align="right" class="" id="todays-enrollments">
                                <span class="data">0</span>
                            </td>
                        </tr>
                        <tr>
                            <td align="left">
                                {{#str}} activitycompletion, local_sitereport {{/str}}
                            </td>
                            <td align="right" class="" id="todays-activitycompletions">
                                <span class="data">0</span>
                            </td>
                        </tr>
                        <tr>
                            <td align="left">
                                {{#str}} coursecompletion, local_sitereport {{/str}}
                            </td>
                            <td align="right" class="" id="todays-coursecompletions">
                                <span class="data">0</span>
                            </td>
                        </tr>
                        <tr>
                            <td align="left">
                                {{#str}} newregistration, local_sitereport {{/str}}
                            </td>
                            <td align="right" class="" id="todays-registrations">
                                <span class="data">0</span>
                            </td>
                        </tr>
                        <tr>
                            <td align="left">
                                {{#str}} visits, local_sitereport {{/str}}
                            </td>
                            <td align="right" class="" id="todays-visits">
                                <span class="data">0</span>
                            </td>
                        </tr>
                        <tr class="d-none">
                            <td align="left">
                                {{#str}} timespent, local_sitereport {{/str}}
                            </td>
                            <td align="right" class="" id="todays-timespend">
                                <span class="data">00:00:00</span>
                            </td>
                        </tr>
                        <tr class="border-top bold">
                            <td align="left">
                                {{#str}} totalusers, local_sitereport {{/str}}
                            </td>
                            <td align="right" class="" id="todays-totalusers">
                                <span class="data">0</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="visual col-12">
            <p class="visual-head bold">
                {{#str}} pageview, local_sitereport {{/str}}
            </p>
            <div class="visual-body">
                <canvas class="ct-chart"></canvas>
            </div>
        </div>
    </div>
</div>

{{#js}}
require(['jquery'], function($) {
    $('#todaysactivityblock .loader').hide();
})
{{/js}}
