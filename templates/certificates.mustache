{{#userfilters}}
    {{> report_elucidsitereport/userfilters }}
{{/userfilters}}
{{#exportlink}}
    {{> report_elucidsitereport/exportdropdown }}
{{/exportlink}}

<div id="wdm-certificates-individual" class="table-responsive" data-sesskey="{{sesskey}}">
	{{#hascertificates}}
        <div id="wdm-certificates-dropdown" class="px-0 py-20 pull-left d-none">
            <select id="wdm-certificates-select" class="form-control singleselect w-250" name="state" style="display: none;">
                {{#certificates}}
                <option value="{{id}}">{{coursename}}: {{name}}</option>
                {{/certificates}}
            </select>
        </div>
    {{/hascertificates}}
    <table class="table w-full">
        <thead>
            <th class="bg-image-none no-sorting-arrow">{{#str}} username, report_elucidsitereport {{/str}}</th>
            <th class="bg-image-none no-sorting-arrow">{{#str}} useremail, report_elucidsitereport {{/str}}</th>
            <th class="bg-image-none no-sorting-arrow">{{#str}} dateofissue, report_elucidsitereport {{/str}}</th>
            <th class="bg-image-none no-sorting-arrow">{{#str}} dateofenrol, report_elucidsitereport {{/str}}</th>
            <th class="bg-image-none no-sorting-arrow">{{#str}} grade, report_elucidsitereport {{/str}}</th>
            <th class="bg-image-none no-sorting-arrow">{{#str}} courseprogress, report_elucidsitereport {{/str}}</th>
        </thead>
        <tbody></tbody>
    </table>
</div>
