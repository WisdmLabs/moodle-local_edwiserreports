<div class="table-reponsive">
    <table class="table w-full mx-0">
        <thead class="bg-secondary">
            <tr>
                <th class="bg-secondary bg-image-none no-sorting-arrow border-bottom-0">
                    {{#str}} name, report_elucidsitereport {{/str}}
                </th>
                <th class="bg-secondary bg-image-none no-sorting-arrow border-bottom-0">
                    {{#str}} course, report_elucidsitereport {{/str}}
                </th>
                <th class="bg-secondary bg-image-none no-sorting-arrow border-bottom-0 text-center">
                    {{#str}} issued, report_elucidsitereport {{/str}}
                </th>
                <th class="bg-secondary bg-image-none no-sorting-arrow border-bottom-0 text-center">
                    {{#str}} notissued, report_elucidsitereport {{/str}}
                </th>
            </tr>
        </thead>
        <tbody>
            {{#customcerts}}
            <tr>
                <td>{{name}}</td>
                <td>{{coursename}}</td>
                <td class="text-center">{{issued}}</td>
                <td class="text-center">{{notissued}}</td>
            </tr>
            {{/customcerts}}
            {{^customcerts}}
                <tr>
                    <td class="text-center" colspan="4">
                        {{#str}} nocertificates, report_elucidsitereport {{/str}}
                    </td>
                </tr>
            {{/customcerts}}
        </tbody>
    </table>
</div>