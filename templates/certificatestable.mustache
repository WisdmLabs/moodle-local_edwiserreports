<div class="table-reponsive">
    <table class="table w-full mx-0 border-0">
        <thead class="">
            <tr>
                <th class="border-bottom-0">
                    {{#str}} name, local_sitereport {{/str}}
                </th>
                <th class="border-bottom-0">
                    {{#str}} course, local_sitereport {{/str}}
                </th>
                <th class="border-bottom-0 text-center">
                    {{#str}} issued, local_sitereport {{/str}}
                </th>
                <th class="border-bottom-0 text-center">
                    {{#str}} notissued, local_sitereport {{/str}}
                </th>
            </tr>
        </thead>
        <tbody>
            {{#customcerts}}
            <tr>
                <td>{{name}}</td>
                <td>{{coursename}}</td>
                <td class="text-center">{{issued}}</td>
                <td class="text-center">{{notissued}}</td>
            </tr>
            {{/customcerts}}
        </tbody>
    </table>
</div>